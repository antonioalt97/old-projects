<UserControl x:Class="WPF_LoginForm.View.PedidoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_LoginForm.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#200F53">

        <Button x:Name="btnVerMenu" Content="VER MENU" HorizontalAlignment="Left" Margin="626,225,0,0" VerticalAlignment="Top" Width="136"  Height="74" FontSize="18" FontWeight="Bold" Click="btnVerMenu_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="aqua"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#836EFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="btnPagar" Content="Pagar" HorizontalAlignment="Left" Margin="626,318,0,0" VerticalAlignment="Top" Width="129"  Height="107" FontSize="20" FontWeight="Bold" Click="btnPagar_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="red"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#836EFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <DataGrid x:Name="dgCaja" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="145" Margin="74,318,0,0" VerticalAlignment="Top" Width="378" >

            <DataGrid.Columns>

                <DataGridTextColumn Header="PRECIO" Binding="{Binding Precio}" />
                <DataGridTextColumn Header="CANTIDAD" Binding="{Binding Cantidad}" />
                <DataGridTextColumn Header="PRODUCTO" Binding="{Binding Nombre}" />
                <DataGridTextColumn Header="SUBTOTAL" Binding="{Binding Subtotal}" />
                <DataGridTemplateColumn Header="ELIMINAR">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Eliminar" Click="EliminarProducto_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Total a Pagar" HorizontalAlignment="Left" Margin="521,35,0,0" VerticalAlignment="Top" Height="52" Width="210" FontSize="22" Foreground="White"/>
        <Label x:Name="lblTotal" Content="$ 0.0" HorizontalAlignment="Left" Margin="400,92,0,0" VerticalAlignment="Top" Height="42" Width="280" Background="#FFF3F3F3" FontSize="22"/>
        <Button x:Name="btnAgregar"
            Command="{Binding LoginCommand}"                            
            Content="Agregar al Pedido"                            
            FontSize="12"
            FontFamily="Montserrat"
            Cursor="Hand"
            BorderThickness="0"
            Foreground="White"
            VerticalAlignment="Top" Margin="74,269,606,0" Click="btnAgregar_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#773DFF"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#836EFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label Content="Numero de Menu" HorizontalAlignment="Left" Margin="64,94,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" RenderTransformOrigin="0.729,0.272" Width="168" Height="56"/>
        <Label Content="Cantidad" HorizontalAlignment="Left" Margin="74,162,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" RenderTransformOrigin="0.729,0.272" Width="148"/>
        <TextBox x:Name="txtCantidad" HorizontalAlignment="Left" Margin="183,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <ComboBox x:Name="cbMenu1" HorizontalAlignment="Left" Margin="635,198,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Menu" HorizontalAlignment="Left" Margin="672,167,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="txtIdMenu" HorizontalAlignment="Left" Margin="243,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="21"/>
        <ComboBox x:Name="cbPagar" HorizontalAlignment="Left" Margin="635,320,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
