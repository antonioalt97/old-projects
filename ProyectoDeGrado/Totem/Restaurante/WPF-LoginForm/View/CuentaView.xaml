<UserControl x:Class="WPF_LoginForm.View.CuentaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_LoginForm.View" xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dgCuenta" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="143" Margin="31,274,0,0" VerticalAlignment="Top" Width="731" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}"/>
                <DataGridTextColumn Header="USUARIO" Binding="{Binding username}" />
                <DataGridTextColumn Header="PASSWORD" Binding="{Binding password}" />
                <DataGridTextColumn Header="NOMBRE" Binding="{Binding first_name}" />
                <DataGridTextColumn Header="APELLIDO" Binding="{Binding last_name}" />
                <DataGridTextColumn Header="TIPO" Binding="{Binding is_staff}"/>
                <DataGridTextColumn Header="ESTADO" Binding="{Binding is_active}"/>
                <DataGridTextColumn Header="EMAIL" Binding="{Binding email}" />
                <DataGridTextColumn Header="RUT" Binding="{Binding rut}" />
                <DataGridTextColumn Header="DIRECCION" Binding="{Binding direccion}" />
                <DataGridTextColumn Header="TELEFONO" Binding="{Binding telefono}" />



            </DataGrid.Columns>

        </DataGrid>
        <Label Content="ID" HorizontalAlignment="Left" Margin="103,27,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White"/>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="64,66,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="59,108,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <Label Content="Tipo" HorizontalAlignment="Left" Margin="317,27,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <Label Content="Estado" HorizontalAlignment="Left" Margin="318,66,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <TextBox x:Name="txtIdCuenta" HorizontalAlignment="Left" Height="23" Margin="164,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="23" Margin="164,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtContra" HorizontalAlignment="Left" Height="23" Margin="164,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtTipo" HorizontalAlignment="Left" Height="23" Margin="406,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtEstado" HorizontalAlignment="Left" Height="23" Margin="406,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="658,51,0,0" VerticalAlignment="Top" Width="75" Click="btnAgregar_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="green"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#836EFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="658,123,0,0" VerticalAlignment="Top" Width="75" Click="btnEliminar_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="red"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#836EFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="658,200,0,0" VerticalAlignment="Top" Width="75" Click="btnModificar_Click" IsEnabled="False">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="aqua"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#836EFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label Content="Correo" HorizontalAlignment="Left" Margin="318,119,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <TextBox x:Name="txtCorreo" HorizontalAlignment="Left" Height="23" Margin="406,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="64,151,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="23" Margin="164,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Apellido" HorizontalAlignment="Left" Margin="317,161,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <TextBox x:Name="txtApellido" HorizontalAlignment="Left" Height="23" Margin="406,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="567,200,0,0" VerticalAlignment="Top" Width="75" Click="btnBuscar_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#773DFF"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#836EFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label Content="Rut" HorizontalAlignment="Left" Margin="64,196,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <Label Content="Direccion" HorizontalAlignment="Left" Margin="318,206,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <TextBox x:Name="txtRut" HorizontalAlignment="Left" Height="23" Margin="164,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDireccion" HorizontalAlignment="Left" Height="23" Margin="407,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Telefono" HorizontalAlignment="Left" Margin="59,230,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" RenderTransformOrigin="0.502,2.277"/>
        <TextBox x:Name="txtTelefono" HorizontalAlignment="Left" Height="23" Margin="164,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>


    </Grid>

</UserControl>
